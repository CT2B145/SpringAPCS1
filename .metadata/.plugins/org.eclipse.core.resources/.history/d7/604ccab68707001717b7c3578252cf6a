
package textExcel;
 
// Update this file with your own code.

public class Spreadsheet implements Grid
{
	private Cell[][] emptycell = new EmptyCell[12][20];
	public Spreadsheet(){
		for( int i = 0; i < emptycell.length; i++){
			for (int j = 0; j<emptycell[i].length; j++){
				emptycell[i][j] = new EmptyCell();
			}
		}
	}
	@Override
	public String processCommand(String command)
	{
		String[] inputcmd = command.split(" ");
		if (inputcmd[1].equals("=")){
			String cellLocation = inputcmd[0];
			SpreadsheetLocation placer = new SpreadsheetLocation(cellLocation);
			int col = placer.getCol();
			int row = placer.getRow();
			return getGridText();	
		}
		if (inputcmd[0].equals("clear")){
			return getGridText();	
		}
		if (inputcmd[0].equals("clear") && inputcmd[1].equals(null)){
			return getGridText();	
		}
		
		return command;
	}

	@Override
	public int getRows()
	{
		int rowCount = 20;
		return rowCount;
	}

	@Override
	public int getCols()
	{
		int colCount = 12;
		
		return colCount;
	}

	@Override
	public Cell getCell(Location loc)
	{
		
		return null;
	}

	@Override
	public String getGridText()
	{
		String tableholder = "";
		tableholder = tableholder + "   |";
		char col = 'A';
		for(int i = 0; i < 12; i++){
			tableholder = tableholder + ((char)(col)) + "         |";
			col = (char) (col +  1);
		}
		for (int i = 0; i < 20; i++){
			tableholder += "\n";
			if(i<9){
				tableholder += (i+1) + "  |";
			}else{
				tableholder += (i+1) + " |"; // remember there is an extra character
			}
			for(int j = 0; j<12 ; j++){
				tableholder += "          "+ "|";
			}
		}
		return tableholder + "\n";
	}
}