package textExcel;

//Update this file with your own code.

public class SpreadsheetLocation implements Location
{
	private String name;
	public SpreadsheetLocation(String cellName)
    {	
     name = cellName;
//    	Location loc = new SpreadsheetLocation(cellName);
//    	loc.getCol();
//    	loc.getRow();
    }
    @Override
    public int getRow()
    { // FIXME fix variables
    	int j = 0;
    	int rowPosition = 0;
    	if(name.charAt(0)>=0){
    		String i = name.toLowerCase();
    		char row = i.charAt(0);
    		j  = (int)row;  	
    		rowPosition = j - 97; // since ascii value of a = 97
    	}
        return rowPosition;
    }

    @Override
    public int getCol()
    { // FIXME fix variables
    	name = name.substring(1);
    	 // FIXME fix variables
    	int j = Integer.parseInt(name);
    	int colPosition = j-1;
        return colPosition;

    }
    
    

}
